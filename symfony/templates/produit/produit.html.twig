{% extends 'base.html.twig' %}

{% block title %}VillageGreen - Nos Produits{% endblock %}

{% block body %}
    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-center">
            <img src="/images/Logo_15.png" alt="Logo" class="logo">
            <a href="/accueil">Accueil</a>
            <a href="/rubrique">Rubrique</a>
            <a href="/produit">Produit</a>
            <a href="/propos">À Propos</a>
            <span class="separator">|</span>
            <a href="/connexion">Connexion</a>
            <a href="/panier">Panier</a>
        </div>
    </div>

    <!-- Parallax Background -->
    <div class="parallax"></div>

    <!-- Main Content -->
    <div class="container">
        <div class="card">
            <h1>Nos Produits</h1>
            <p>Découvrez notre sélection de produits pour musiciens et producteurs.</p>

            <div class="cards-container">
                <!-- Produit 1: Guitare acoustique -->
                <div class="card">
                    <img src="/images/guitare_acoustique.jpg" alt="Guitare acoustique">
                    <h2>Guitare acoustique</h2>
                    <p>Guitare acoustique 6 cordes en bois de rose, idéale pour débutants et professionnels.</p>
                    <p>Prix: 120.50€</p>
                    <a href="/produit/1" class="btn">Voir plus</a>
                </div>

                <!-- Produit 2: Guitare électrique -->
                <div class="card">
                    <img src="/images/guitare_electrique.jpg" alt="Guitare électrique">
                    <h2>Guitare électrique</h2>
                    <p>Guitare électrique avec corps en aulne, micros puissants et finition brillante.</p>
                    <p>Prix: 180.00€</p>
                    <a href="/produit/2" class="btn">Voir plus</a>
                </div>

                <!-- Produit 3: Violon -->
                <div class="card">
                    <img src="/images/violon.jpg" alt="Violon">
                    <h2>Violon</h2>
                    <p>Violon en bois massif avec archet et étui rigide, idéal pour les musiciens professionnels.</p>
                    <p>Prix: 250.00€</p>
                    <a href="/produit/3" class="btn">Voir plus</a>
                </div>

                <!-- Produit 4: Flûte traversière -->
                <div class="card">
                    <img src="/images/flute_traversiere.jpg" alt="Flûte traversière">
                    <h2>Flûte traversière</h2>
                    <p>Flûte traversière en métal avec clé en argent, son clair et brillant.</p>
                    <p>Prix: 100.00€</p>
                    <a href="/produit/4" class="btn">Voir plus</a>
                </div>

                <!-- Produit 5: Saxophone alto -->
                <div class="card">
                    <img src="/images/saxophone.jpg" alt="Saxophone alto">
                    <h2>Saxophone alto</h2>
                    <p>Saxophone alto en laiton, idéal pour débutants et intermédiaires.</p>
                    <p>Prix: 350.00€</p>
                    <a href="/produit/5" class="btn">Voir plus</a>
                </div>

                <!-- Produit 6: Batterie acoustique -->
                <div class="card">
                    <img src="/images/batterie_acoustique.jpg" alt="Batterie acoustique">
                    <h2>Batterie acoustique</h2>
                    <p>Kit de batterie acoustique 5 pièces avec cymbales et pédales.</p>
                    <p>Prix: 450.00€</p>
                    <a href="/produit/6" class="btn">Voir plus</a>
                </div>

                <!-- Ajouter plus de produits ici -->

            </div>
        </div>
    </div>

    <!-- Social Media Bar -->
    <div class="social-bar">
        <a href="https://www.facebook.com" target="_blank">Facebook</a>
        <a href="https://www.twitter.com" target="_blank">Twitter</a>
        <a href="https://www.instagram.com" target="_blank">Instagram</a>
        <a href="https://www.linkedin.com" target="_blank">LinkedIn</a>
        <span>|</span>
        <a href="/conditions-utilisation">Conditions d'utilisation</a>
        <a href="/politique-confidentialite">Politique de confidentialité</a>
        <a href="/contact">Contact</a>
    </div>

    <style>
        /* Importation de la police Rock Salt */
        @import url('https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap');

        /* Appliquer la police sur tout le site */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Rock Salt', cursive;
            overflow-x: hidden;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #333;
            padding: 15px 20px;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 10;
        }

        .navbar-center {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .logo {
            height: 40px;
            margin-right: 15px;
        }

        .separator {
            color: white;
            font-size: 18px;
            padding: 0 8px;
        }

        /* Parallax Background */
        .parallax {
            background-image: url('/images/headphones-6159058_1920-Pro.jpg');
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: absolute;
            width: 100%;
            min-height: 100vh;
            top: 0;
            z-index: -1;
        }

        /* Main Content */
        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 100px 20px 50px;
            position: relative;
            z-index: 1;
            margin-top: 0;
            min-height: 100vh;
        }

        .card {
            max-width: 800px;
            padding: 40px;
            background: white;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            text-align: center;
            font-size: 14px;
        }

        h1, h2 {
            color: #0056b3;
            margin-bottom: 15px;
        }

        p {
            text-align: justify;
            color: #555;
            line-height: 1.6;
        }

        /* Cards container */
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
        }

        .card h2 {
            font-size: 1.4em;
            margin: 10px 0;
        }

        .card p {
            color: #555;
        }

        .btn {
            display: inline-block;
            background-color: #0056b3;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

        .btn:hover {
            background-color: #004080;
        }

        /* Social Bar */
        .social-bar {
            background-color: #f1f1f1;
            padding: 1em;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

        .social-bar a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
        }
    </style>
{% endblock %}
