{% extends 'base.html.twig' %}

{% block title %}VillageGreen - Contact{% endblock %}

{% block body %}
    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-center">
            <img src="/images/Logo_15.png" alt="Logo" class="logo">
            <a href="/accueil">Accueil</a>
            <a href="/rubrique">Rubrique</a>
            <a href="/produit">Produit</a>
            <a href="/propos">À Propos</a>
            <span class="separator">|</span>
            <a href="/connexion">Connexion</a>
            <a href="/panier">Panier</a>
        </div>
    </div>

    <!-- Parallax Background -->
    <div class="parallax"></div>

    <!-- Main Content -->
    <div class="container">
        <div class="card">
            <h1>Nous contacter</h1>
            <p>Si vous avez des questions ou besoin d'aide, n'hésitez pas à nous envoyer un message via ce formulaire.</p>

            <!-- Formulaire de contact -->
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.subject) }}
                    {{ form_row(form.topic) }}
                    {{ form_row(form.message) }}
                    <button type="submit" class="submit-btn">Envoyer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Social Media Bar -->
    <div class="social-bar">
        <a href="https://www.facebook.com" target="_blank">Facebook</a>
        <a href="https://www.twitter.com" target="_blank">Twitter</a>
        <a href="https://www.instagram.com" target="_blank">Instagram</a>
        <a href="https://www.linkedin.com" target="_blank">LinkedIn</a>
        <span>|</span>
        <a href="/conditions-utilisation">Conditions d'utilisation</a>
        <a href="/politique-confidentialite">Politique de confidentialité</a>
        <a href="/contact">Contact</a>
    </div>

    <style>
        /* Importation de la police Rock Salt */
        @import url('https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap');

        /* Appliquer la police sur tout le site */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Rock Salt', cursive;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #333;
            padding: 15px 20px;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 10;
        }

        .navbar-center {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .logo {
            height: 40px;
            margin-right: 15px;
        }

        .separator {
            color: white;
            font-size: 18px;
            padding: 0 8px;
        }

        /* Parallax Background */
        .parallax {
            background-image: url('/images/pexels-pixabay-290660-acc.jpg');
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        /* Main Content */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 100px 20px 50px;
            position: relative;
            z-index: 1;
        }

        .card {
            max-width: 800px;
            padding: 40px;
            background: white;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            text-align: center;
            font-size: 14px;
        }

        h1, h2 {
            color: #0056b3;
            margin-bottom: 15px;
        }

        p {
            text-align: justify;
            color: #555;
            line-height: 1.6;
        }

        /* Form Styling */
        .form-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 20px;
        }

        .submit-btn {
            background-color: #0056b3;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .submit-btn:hover {
            background-color: #004080;
        }

        /* Social Bar */
        .social-bar {
            background-color: #f1f1f1;
            padding: 1em;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

        .social-bar a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
        }
    </style>
{% endblock %}
