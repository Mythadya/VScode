    }

    .social-bar a:hover {
        text-decoration: underline;
    }
.section-title {
    margin-top: 10px;
    margin-bottom: 14px;
    font-size:20px;
    font-family: 'Rock Salt', cursive;
}

/* R√©duction de l'espace sous la carte principale */
.main-card {
    margin-bottom: 10px;
}

