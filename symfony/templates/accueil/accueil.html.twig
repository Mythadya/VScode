    .section-title {
        font-size: 24px;
        color: #0056b3;
        text-align: center;
        margin: 40px 0;
        width: 100%;
    }

    .cards-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    width: 100%;
    }

    .cards-container .card {
    max-width: 250px;
    flex: 1 1 calc(50% - 15px); /* Deux cartes par ligne */
