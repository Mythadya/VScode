    }

    .footer a:hover {
        text-decoration: underline;
    }

    /* Social Bar */
    .social-bar {
        background-color: #f1f1f1;
        padding: 0.5em;
        text-align: center;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
        z-index: 2; /* Assurer que la social bar soit visible */
