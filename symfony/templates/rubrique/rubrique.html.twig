{% extends 'base.html.twig' %}

{% block title %}VillageGreen - Nos Rubriques{% endblock %}

{% block body %}
    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-center">
            <img src="/images/Logo_15.png" alt="Logo" class="logo">
            <a href="/accueil">Accueil</a>
            <a href="/rubrique">Rubrique</a>
            <a href="/produit">Produit</a>
            <a href="/propos">À Propos</a>
            <span class="separator">|</span>
            <a href="/connexion">Connexion</a>
            <a href="/panier">Panier</a>
        </div>
    </div>

    <!-- Parallax Background -->
    <div class="parallax"></div>

    <!-- Main Content -->
    <div class="container">
        <div class="card">
            <h1>Nos Rubriques</h1>
            <p>Découvrez notre sélection de produits classés par catégorie.</p>

            <div class="cards-container">
             {% for rubrique in rubriques %}
             <div class="card">
              <img src="/images/{{ rubrique.libelle|lower }}.jpg" alt="{{ rubrique.libelle }}"
                 onerror="this.onerror=null;this.src='/images/app-6702045_1280-card-default.png';">
              <h2>{{ rubrique.libelle }}</h2>
              <p>Découvrez notre sélection dans cette rubrique.</p>
             <a href="{{ path('app_sous_rubrique') }}" class="btn">Voir toutes les sous-rubriques</a>
            </div>
             {% else %}
             <p>Aucune rubrique disponible.</p>
             {% endfor %}   
           </div>
        </div>
    </div>

    <!-- Social Media Bar -->
    <div class="social-bar">
        <a href="https://www.facebook.com" target="_blank">Facebook</a>
        <a href="https://www.twitter.com" target="_blank">Twitter</a>
        <a href="https://www.instagram.com" target="_blank">Instagram</a>
        <a href="https://www.linkedin.com" target="_blank">LinkedIn</a>
        <span>|</span>
        <a href="/conditions-utilisation">Conditions d'utilisation</a>
        <a href="/politique-confidentialite">Politique de confidentialité</a>
        <a href="/contact">Contact</a>
    </div>

    <style>
        /* Importation de la police Rock Salt */
        @import url('https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap');

        /* Appliquer la police sur tout le site */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Rock Salt', cursive;
            overflow-x: hidden; /* Empêche le débordement horizontal */
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #333;
            padding: 15px 20px;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 10;
        }

        .navbar-center {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
            padding: 5px 10px;
            border-radius: 5px;
        }

        .logo {
            height: 40px;
            margin-right: 15px;
        }

        .separator {
            color: white;
            font-size: 18px;
            padding: 0 8px;
        }

        /* Parallax Background */
        .parallax {
            background-image: url('/images/music-1283851_1920-Rub.jpg');
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: absolute;
            width: 100%;
            min-height: 100vh; /* Changement : min-height au lieu de height */
            top: 0;
            z-index: -1;
        }

        /* Main Content */
        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Aligne le contenu au début */
            padding: 100px 20px 50px;
            position: relative;
            z-index: 1;
            margin-top: 0; /* Retrait de marges inutiles */
            min-height: 100vh; /* Assure que le contenu occupe au moins 100vh */
        }

        .card {
            max-width: 800px;
            padding: 40px;
            background: white;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            text-align: center;
            font-size: 14px;
        }

        h1, h2 {
            color: #0056b3;
            margin-bottom: 15px;
        }

        p {
            text-align: justify;
            color: #555;
            line-height: 1.6;
        }

        /* Cards container */
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
        }

        .card h2 {
            font-size: 1.4em;
            margin: 10px 0;
        }

        .card p {
            color: #555;
        }

        .btn {
            display: inline-block;
            background-color: #0056b3;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            transition: 0.3s;
        }

        .btn:hover {
            background-color: #004080;
        }

        /* Social Bar */
        .social-bar {
            background-color: #f1f1f1;
            padding: 1em;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }

        .social-bar a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
        }
    </style>
{% endblock %}
